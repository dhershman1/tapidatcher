{
  "name": "tapidatcher",
  "version": "0.1.0",
  "description": "An easy way to intelligentally watch your tape tests",
  "exports": "./index.js",
  "type": "module",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "test": "tapidatcher -s tests/basic/src -t tests/basic/tests -n 'FORCE_COLOR=1' -p 'tap-on'",
    "test:inline": "tapidatcher -i tests/inline -n 'FORCE_COLOR=1' -p 'tap-on'",
    "test:setup": "tape tests/basic/tests/example.spec.js | tap-on",
    "lint": "standard index.js | snazzy"
  },
  "bin": {
    "tapidatcher": "bin/tapidatcher.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dhershman1/tapidatcher.git"
  },
  "keywords": [
    "tape",
    "tap",
    "test",
    "tests",
    "watcher",
    "tapidatcher"
  ],
  "author": "Dustin Hershman<dustinh17@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dhershman1/tapidatcher/issues"
  },
  "homepage": "https://github.com/dhershman1/tapidatcher#readme",
  "dependencies": {
    "chokidar": "3.5.2",
    "globby": "^12.0.1",
    "minimist": "1.2.5"
  },
  "devDependencies": {
    "snazzy": "9.0.0",
    "standard": "16.0.3",
    "tap-on": "0.2.0",
    "tape": "5.3.1"
  }
}
